pipeline {
    agent any
    
    tools {
        nodejs 'NodeJS'
    }
    
    environment {
        APP_NAME = 'jenkins-demo-app'
        BUILD_NUMBER_ENV = "${BUILD_NUMBER}"
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out source code...'
                script {
                    sh 'ls -la'
                    sh 'pwd'
                }
            }
        }
        
        stage('Build') {
            steps {
                echo 'Building the application...'
                sh 'npm install'
                sh 'echo "Build completed successfully"'
            }
        }
        
        stage('Test') {
            steps {
                echo 'Running tests...'
                script {
                    // 1. FORCE KILL any existing node process on port 3000 before starting
                    // This prevents the "EADDRINUSE" error
                    sh "fuser -k 3000/tcp || true"
                    sh 'pkill -f "node app.js" || true'
                    
                    // 2. Start the application in background
                    // Added -X so Jenkins doesn't kill background processes immediately
                    sh 'BUILD_ID=dontKillMe nohup npm start > app.log 2>&1 &'
                    
                    // 3. Wait for app to start
                    sh 'sleep 5'
                    
                    // 4. Run tests
                    // If npm test fails, the error code will be caught here
                    sh 'npm test'
                }
            }
            post {
                always {
                    echo 'Cleaning up test processes...'
                    // Kill the process we just started so the port is free for the next build
                    sh "fuser -k 3000/tcp || true"
                    sh 'pkill -f "node app.js" || true'
                }
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Deploying application...'
                script {
                    sh 'mkdir -p /tmp/deployment'
                    sh 'cp -r * /tmp/deployment/ || true'
                    sh 'echo "Application deployed to /tmp/deployment"'
                }
            }
        }
    }
    
    post {
        always {
            echo 'Pipeline execution completed!'
            sh 'echo "Build Number: ${BUILD_NUMBER_ENV}"'
        }
        success {
            echo 'Pipeline executed successfully!'
        }
        failure {
            echo 'Pipeline execution failed!'
        }
    }
}
