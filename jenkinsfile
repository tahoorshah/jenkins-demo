pipeline {
    agent any
    
    tools {
        nodejs 'NodeJS'
    }
    
    environment {
        APP_NAME = 'jenkins-demo-app'
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out source code...'
                // Ensures we have a clean slate from Git
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                echo 'Building the application...'
                sh 'npm install'
            }
        }
        
        stage('Test') {
            steps {
                echo 'Running tests...'
                script {
                    // Kill any zombie processes before starting
                    sh "fuser -k 3000/tcp || true"
                    
                    // The '-- --exit' tells Mocha to force-quit after finishing
                    // This prevents the pipeline from hanging
                    sh 'npm test -- --exit'
                }
            }
            post {
                always {
                    echo 'Cleaning up port 3000...'
                    sh "fuser -k 3000/tcp || true"
                }
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Deploying application...'
                sh 'mkdir -p /tmp/deployment'
                sh 'cp -r * /tmp/deployment/ || true'
                sh 'echo "Deployment complete"'
            }
        }
    }
    
    post {
        success {
            echo 'Build and Test successful!'
        }
        failure {
            echo 'Build failed. Check the logs above for errors.'
        }
    }
}
