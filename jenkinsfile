pipeline {
    agent any
    
    tools {
        nodejs 'NodeJS'
    }
    
    environment {
        APP_NAME = 'jenkins-demo-app'
        BUILD_NUMBER_ENV = "${BUILD_NUMBER}"
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out source code...'
                script {
                    sh 'ls -la'
                    sh 'pwd'
                }
            }
        }
        
        stage('Build') {
            steps {
                echo 'Building the application...'
                sh 'npm install'
                sh 'echo "Build completed successfully"'
            }
        }
        
        stage('Test') {
            steps {
                echo 'Running tests...'
                script {
                    // 1. Clean up port 3000 to ensure a fresh start
                    sh "fuser -k 3000/tcp || true"
                    
                    // 2. Run tests only. 
                    // Note: test.js imports app.js, so it handles starting the server.
                    sh 'npm test'
                }
            }
            post {
                always {
                    echo 'Cleaning up test processes...'
                    // Ensure the port is freed for the next build
                    sh "fuser -k 3000/tcp || true"
                }
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Deploying application...'
                script {
                    sh 'mkdir -p /tmp/deployment'
                    sh 'cp -r * /tmp/deployment/ || true'
                    sh 'echo "Application deployed to /tmp/deployment"'
                }
            }
        }
    }
    
    post {
        always {
            echo 'Pipeline execution completed!'
            sh 'echo "Build Number: ${BUILD_NUMBER_ENV}"'
        }
        success {
            echo 'Pipeline executed successfully!'
        }
        failure {
            echo 'Pipeline execution failed!'
        }
    }
}
