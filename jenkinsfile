pipeline {
    agent any
    
    tools {
        nodejs 'NodeJS'
    }
    
    environment {
        APP_NAME = 'jenkins-demo-app'
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out source code...'
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                echo 'Building the application...'
                sh 'npm install'
            }
        }
        
        stage('Test') {
            steps {
                echo 'Running tests...'
                script {
                    // Clean the port before testing
                    sh "fuser -k 3000/tcp || true"
                    // Run mocha tests
                    sh 'npm test -- --exit'
                }
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Deploying and Starting Application...'
                script {
                    sh 'mkdir -p /tmp/deployment'
                    sh 'cp -r * /tmp/deployment/'
                    
                    // Kill any old version
                    sh "fuser -k 3000/tcp || true"
                    
                    // The MAGIC LINE: Note the '>' for logs and the '&' at the very end
                    sh 'BUILD_ID=dontKillMe nohup node /tmp/deployment/app.js > /tmp/deployment/app.log 2>&1 &'
                    
                    sh 'sleep 5' // Give it a bit more time to settle
                    echo "SUCCESS: Application is running at http://localhost:3000"
                }
            }
        }
    }
    
    post {
        success {
            echo 'Pipeline completed successfully. Your app is live!'
        }
        failure {
            echo 'Pipeline failed. Check the logs to see what went wrong.'
        }
    }
}
